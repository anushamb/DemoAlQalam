<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:background="@color/colorWhite"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    android:layout_height="match_parent"
    tools:context="com.frocerie.demoalqalam.dua.ClothesActivityDua">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLOTHES"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_marginTop="13dp"
        android:id="@+id/textView6"
        tools:ignore="HardcodedText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/tvWear"
        android:layout_marginTop="34dp"
        android:textAllCaps="true"
        android:background="@drawable/ripple_effect_button"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:text="1.When wearing clothes (D062)"
        android:clickable="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:onClick="onClick"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/tvRe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="2.When removing clothes (D063)"
        android:background="@drawable/ripple_effect_button"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="32dp"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:layout_below="@+id/tvWear"
        android:layout_alignLeft="@+id/tvWear"
        android:layout_alignStart="@+id/tvWear"
        android:layout_alignRight="@+id/tvWear"
        android:layout_alignEnd="@+id/tvWear" />

    <Button
        android:id="@+id/tvNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_button"
        android:textColor="@color/colorWhite"
        android:text="3.Putting on new clothes (D064)"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/tvRe"
        android:paddingLeft="16dp"
        android:textAllCaps="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/tvRe"
        android:layout_alignStart="@+id/tvRe"
        android:layout_alignRight="@+id/tvRe"
        android:layout_alignEnd="@+id/tvRe"
    />

    <Button
        android:id="@+id/tvPut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_button"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:text="4.For someone who has put on new clothes (D065 and D066)"
        android:layout_below="@+id/tvNew"
        android:layout_marginTop="30dp"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/tvNew"
        android:layout_alignStart="@+id/tvNew"
        android:layout_alignRight="@+id/tvNew"
        android:layout_alignEnd="@+id/tvNew" />




