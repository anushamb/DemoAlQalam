<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.frocerie.demoalqalam.SeekActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="16dp"
       android:background="@color/colorWhite"
       android:orientation="vertical">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           tools:ignore="HardcodedText"
           android:textSize="@dimen/dua_text_size"
           android:textStyle="bold"
           android:text="How To Seek Allah’s Protection For Children (D031)"
           android:gravity="center"
           android:textColor="@color/colorPrimary"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:ignore="HardcodedText,RtlHardcoded"
           android:textSize="@dimen/dua_arabic_eng_new"
           android:textAlignment="center"
           android:textColor="@color/duaTextColor"
           android:gravity="left"
           android:textAppearance="@android:style/TextAppearance"
           android:text="The Prophet (P.B.U.H) used to seek Allah’s protection for Al-Hasan and Al-Husain by saying:"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="@dimen/dua_arabic_size_new"
           android:textStyle="bold"
           android:textAlignment="center"
           android:textColor="@color/duaTextColor"
           android:gravity="left"
           tools:ignore="HardcodedText,RtlHardcoded"
           android:text=" أُعِيْذُكُمَا بِكَلِمَاتِ اللّٰهِ التَّامَّةِ مِنْ كُلِّ شَيْطَانٍ وَهَامَّةٍ ، وَمِنْ كُلِّ عَيْنٍ لَامَّةٍ"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:ignore="HardcodedText,RtlHardcoded"
           android:textSize="@dimen/dua_arabic_eng_new"
           android:textAppearance="@android:style/TextAppearance"
           android:textColor="@color/duaTextColor"
           android:gravity="left"
           android:text="D031-  ‘Ueethukumaa bikalimaatil-laahit-taammati min kulli shaytaanin wa haammatin, wa min kulli ‘aynin laammatin.[DN.123]"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           tools:ignore="HardcodedText,RtlHardcoded"
           android:textSize="@dimen/dua_arabic_eng_new"
           android:textAppearance="@android:style/TextAppearance"
           android:textColor="@color/duaTextColor"
           android:gravity="left"
           android:text="I seek protection for you in the Perfect Words of Allah from every devil and
every beast, and from every envious blameworthy eye."/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="@dimen/dua_arabic_eng_new"
           android:textAppearance="@android:style/TextAppearance"
           android:textColor="@color/duaTextColor"
           android:gravity="left"
           android:text="[Al-Bukhari 4/119.]"
           tools:ignore="HardcodedText,RtlHardcoded" />


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Page 1/1"
           android:textColor="@color/colorPrimary"
           android:textStyle="bold"
           android:gravity="right"
           tools:ignore="HardcodedText,RtlHardcoded"/>



   </LinearLayout>




</ScrollView>
