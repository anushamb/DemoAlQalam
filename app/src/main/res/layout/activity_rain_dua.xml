<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite" tools:context="com.frocerie.demoalqalam.dua.RainActivityDua">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:background="@color/colorWhite"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RAIN"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_marginTop="13dp"
            android:id="@+id/textView6"
            tools:ignore="HardcodedText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/tvrainblow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.When the wind blows (D146 - D147)."
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp"
            android:background="@drawable/ripple_effect_button"
            android:textColor="@color/colorWhite"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:onClick="onClick"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/tvRainThun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.When it thunder (D148)."
            android:layout_below="@+id/tvrainblow"
            android:layout_marginTop="22dp"
            android:background="@drawable/ripple_effect_button"
            android:textColor="@color/colorWhite"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:onClick="onClick"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:textAllCaps="true"
            android:layout_alignLeft="@+id/tvrainblow"
            android:layout_alignStart="@+id/tvrainblow" />

        <Button
            android:id="@+id/tvRainFor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.For rain (D149 - D151)"
            android:layout_below="@+id/tvRainThun"
            android:layout_marginTop="22dp"
            android:background="@drawable/ripple_effect_button"
            android:textColor="@color/colorWhite"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:onClick="onClick"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:textAllCaps="true"
            android:layout_alignLeft="@+id/tvrainblow"
            android:layout_alignStart="@+id/tvrainblow"/>


        <Button
            android:id="@+id/tvRainWhen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.When it rains (D152)."
            android:layout_below="@+id/tvRainFor"
            android:layout_marginTop="22dp"
            android:background="@drawable/ripple_effect_button"
            android:textColor="@color/colorWhite"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:onClick="onClick"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:textAllCaps="true"
            android:layout_alignLeft="@+id/tvrainblow"
            android:layout_alignStart="@+id/tvrainblow"/>


        <Button
            android:id="@+id/tvRainAfter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5.After it rains (D153)"
            android:layout_below="@+id/tvRainWhen"
            android:layout_marginTop="22dp"
            android:background="@drawable/ripple_effect_button"
            android:textColor="@color/colorWhite"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:onClick="onClick"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:textAllCaps="true"
            android:layout_alignLeft="@+id/tvrainblow"
            android:layout_alignStart="@+id/tvrainblow"/>


        <Button
            android:id="@+id/tvRainWith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6.For Withholding of the rain (D154)"
            android:layout_below="@+id/tvRainAfter"
            android:layout_marginTop="22dp"
            android:background="@drawable/ripple_effect_button"
            android:textColor="@color/colorWhite"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:clickable="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:onClick="onClick"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
            android:textAllCaps="true"
            android:layout_alignLeft="@+id/tvrainblow"
            android:layout_alignStart="@+id/tvrainblow"/>
    </RelativeLayout>


</ScrollView>
