<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:padding="16dp"
    tools:context="com.frocerie.demoalqalam.duafrag.RainDSecFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For Rain (D150)"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/dua_heading_new"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اَللّٰهُمَّ أَغِثْنَا , اَللّٰهُمَّ أَغِثْنَا , اَللّٰهُمَّ أَغِثْنَا."
        android:textStyle="bold"
        android:textSize="@dimen/dua_arabic_size_new"
        android:textAlignment="center"
        android:textColor="@color/colorList"
        android:gravity="center"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/colorList"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="@dimen/dua_arabic_eng_new"
        android:text="D150-	Allaahumma ‘aghithnaa, Allaahumma ‘aghithnaa, Allaahumma ‘aghithnaa,"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/colorList"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="@dimen/dua_arabic_eng_new"
        android:text="O Allah, send us rain. O Allah, send us rain. O Allah, send us rain."
        tools:ignore="HardcodedText,RtlHardcoded" />

 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:gravity="left"
     android:textColor="@color/colorList"
     android:textAppearance="@android:style/TextAppearance"
     android:textSize="@dimen/dua_arabic_eng_new"
     android:text="[Al-Bukhāri 1/224, Muslim 2/613.]"
     tools:ignore="HardcodedText,RtlHardcoded" />
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />
 <TextView
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Page 2/3"
     android:textStyle="bold"
     android:gravity="right"
     android:textColor="@color/colorPrimary"
     tools:ignore="HardcodedText,RtlHardcoded"/>
