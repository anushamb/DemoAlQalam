<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@color/colorWhite"
    tools:context="com.frocerie.demoalqalam.duafrag.DfourFragment">

    <TextView
        android:id="@+id/head"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Upon Completing Ablution (D004)"
        android:textSize="@dimen/dua_heading_new"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        tools:ignore="HardcodedText" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorList"
        android:text="سُبْحَانَكَ اَللّٰهُمَّ  وَ بِحَمْدِكَ , أَشْهَدُ أَنْ لَا إِلٰهَ إِلَّا أَنْتَ , أَسْتَغْفِرُكَ وَ أَتُوْبُ إِلَيْكَ."
        android:textSize="@dimen/dua_arabic_size_new"
        android:textStyle="bold"
        android:gravity="left"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorList"
        android:gravity="left"
        android:textSize="@dimen/dua_arabic_eng_new"
        android:textAppearance="@android:style/TextAppearance"
        android:text="@string/ddd"
        tools:ignore="RtlHardcoded" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorList"
        android:textAppearance="@android:style/TextAppearance"
        android:gravity="left"
        android:textSize="@dimen/dua_eng_size_new"
        android:text="@string/glory"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Page 3/3"
        android:textColor="@color/colorPrimary"
        android:gravity="right"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded" />

