<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/batchesbg">

    <!--android:background="#dadcdc"-->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_batch"
        android:text="Residential Hifd"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_marginTop="59dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="HardcodedText"
        android:id="@+id/ivReside"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ivPart"
        android:layout_alignEnd="@+id/ivPart" />


    <Button
        android:id="@+id/ivRegu"
        android:background="@drawable/ripple_effect_batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular madrasa"
        android:layout_marginLeft="19dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        tools:ignore="HardcodedText"
        android:layout_marginTop="15dp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/ivReside"
        android:layout_alignLeft="@+id/ivFull"
        android:layout_alignStart="@+id/ivFull" />


    <Button
        android:layout_width="wrap_content"
        android:background="@drawable/ripple_effect_batch"
        android:layout_height="wrap_content"
        android:text="Full day hifd"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginLeft="47dp"
        tools:ignore="HardcodedText"
        android:id="@+id/ivFull"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/ivRegu"
        android:layout_alignLeft="@+id/ivDay"
        android:layout_alignStart="@+id/ivDay"
        android:layout_marginStart="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_batch"
        android:text="Part time hifd"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="17sp"
        tools:ignore="HardcodedText"
        android:id="@+id/ivPart"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/ivFull"
        android:layout_alignRight="@+id/ivFull"
        android:layout_alignEnd="@+id/ivFull" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect_batch"
        android:text="day Batch"
        tools:ignore="HardcodedText"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginLeft="49dp"
        android:id="@+id/ivDay"
        android:layout_marginTop="14dp"
        android:layout_marginStart="49dp"
        android:layout_below="@+id/ivPart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/ivMegr"
        android:background="@drawable/ripple_effect_batch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Magrib batch"
        android:layout_marginTop="14dp"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_below="@+id/ivDay"
        android:layout_alignLeft="@+id/ivRegu"
        android:layout_alignStart="@+id/ivRegu" />





</RelativeLayout>
