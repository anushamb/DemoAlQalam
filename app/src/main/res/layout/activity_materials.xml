         <View
             android:layout_width="match_parent"
             android:layout_height="10dp"
             android:layout_below="@+id/logo"
             android:id="@+id/imv"/>

         <ImageView
             android:id="@+id/ivQuran"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:clickable="true"
             android:onClick="onClick"
             android:src="@drawable/new_material_quran"
             android:background="?attr/selectableItemBackgroundBorderless"
             tools:ignore="ContentDescription"
             android:layout_below="@+id/logo"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />

         <View
             android:id="@+id/view1"
             android:layout_below="@+id/ivQuran"
             android:layout_width="match_parent"
             android:layout_height="10dp"/>

         <ImageView
             android:id="@+id/inter"
             android:layout_below="@+id/view1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:clickable="true"
             android:onClick="onClick"

             android:src="@drawable/new_materials_quran_inter"
             android:background="?attr/selectableItemBackgroundBorderless"
             tools:ignore="ContentDescription" />


         <View
             android:id="@+id/view2"
             android:layout_below="@+id/inter"
             android:layout_width="match_parent"
             android:layout_height="10dp"/>


         <ImageView
             android:id="@+id/hadees"


             android:paddingTop="9dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:clickable="true"
             android:onClick="onClick"
             android:src="@drawable/new_materials_hadees"
             android:background="?attr/selectableItemBackgroundBorderless"
             tools:ignore="ContentDescription"
             android:layout_below="@+id/inter"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />


         <View
             android:id="@+id/view3"
             android:layout_below="@+id/hadees"
             android:layout_width="match_parent"
             android:layout_height="10dp"/>


         <ImageView
             android:id="@+id/nasheed"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:clickable="true"
             android:onClick="onClick"
             android:paddingTop="1dp"
             android:src="@drawable/new_materials_naseed"
             android:background="?attr/selectableItemBackgroundBorderless"
             tools:ignore="ContentDescription"
             android:layout_below="@+id/view3"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true" />
     <Button
         android:id="@+id/btn_badge_nasheed"
         android:layout_width="25dp"
         android:layout_height="25dp"
         android:background="@drawable/item_count"
         android:text="0"
         android:textColor="@color/colorWhite"
         android:layout_below="@+id/view3"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true"
         tools:ignore="HardcodedText" />












     </RelativeLayout>





