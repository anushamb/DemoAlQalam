<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.frocerie.demoalqalam.FragmentTalensDay">


    <Button
        android:id="@+id/nasheed"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="Nasheed"
        android:textSize="15sp"
        android:background="@drawable/butblue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.122"
        app:layout_constraintHorizontal_bias="0.074" />

    <Button
        android:id="@+id/qeerath"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:background="@drawable/butblue"
        android:text="Qeerath"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/nasheed"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintVertical_bias="0.118" />

    <Button
        android:id="@+id/speech"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="Speech"
        android:background="@drawable/butblue"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nasheed"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintVertical_bias="0.243" />

    <Button
        android:id="@+id/craft"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="Craft"
        android:textSize="15sp"
        android:background="@drawable/butblue"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/qeerath"
        app:layout_constraintLeft_toRightOf="@+id/speech"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintVertical_bias="0.248" />

    <Button
        android:id="@+id/writting"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="Writting"
        android:textSize="15sp"
        android:background="@drawable/butblue"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.038"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/speech"
        app:layout_constraintVertical_bias="0.541" />

    <Button
        android:id="@+id/sports"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:text="Sports"
        android:textSize="15sp"
        android:background="@drawable/butblue"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/craft"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/writting"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintVertical_bias="0.541" />


</android.support.constraint.ConstraintLayout>
